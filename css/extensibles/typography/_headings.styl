*
  transition all 0.25s ease-in-out

// Heading Scale
@media (max-width: 640px)
  heading-scale( ratio = 1.1, top = 2, bottom = -0.125, shift = 0)
@media (min-width: 640px) and (max-width: 800px)
  heading-scale( ratio = 1.2, top = 2, bottom = -0.125, shift = 0)
@media (min-width: 800px)
  heading-scale( ratio = 1.3, top = 2, bottom = -0.125, shift = 0)

// Heading Settings - Global settings for h1-h6
$heading-settings
  font-weight normal
  letter-spacing 0.075em
  line-height unit(0.85)

hr
  margin:0 0 -1px;
  height: 1px;
  display: block;
  border: 0;
  background: red